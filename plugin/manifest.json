{

    "manifest_version": 2,
    "name": "Firefox bookmark plugin",
    "version": "1.0",
  
    "description": "A simple firefox plugin to save websites",
    "homepage_url": "https://gitlab.com/florian_fromager/firefox-bookmark-plugin",
  
    "icons": {
        "48": "icons/bookmark-48.png",
        "96": "icons/bookmark-96.png"
    },

    "permissions": [
        "activeTab",
        "menus",
        "<all_urls>"
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_icon": "icons/bookmark-48.png",
        "default_title": "Bookmark",
        "default_popup": "popup/bookmark.html"
    }
  
  }